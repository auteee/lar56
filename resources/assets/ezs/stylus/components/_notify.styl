/** Snackbar */
$snackbar-background-color := #323232
$snackbar-lrtb :=.4rem
$snackbar-content-height :=2.4rem
$snackbar-content-height-lrb := ($snackbar-content-height + .4)
//them

.notify
  background-color: $snackbar-background-color
  color:#fff
  &-content
    background-color: inherit
    color: currentColor

.notify
  position: fixed
  display: flex
  height: 0
  pointer-events: none
  visibility: visible
  z-index: 1000
  &.absolute
    position: absolute
  &.center
    top:50%
    left:50%
    transform :translate(-50%, 0)
  &.top
    top: 0
    left: 50%
    transform: translate(-50%, 0)
  &.bottom
    bottom: $snackbar-content-height
    left: 50%
    transform: translate(-50%, 0)
  &.left
    left: $snackbar-lrtb
    right: initial
    transform: none
    &.top
      top: $snackbar-lrtb
    &.bottom
      bottom: $snackbar-content-height-lrb
  &.right
    left: initial
    right: $snackbar-lrtb
    transform: none
    &.top
      top: $snackbar-lrtb
    &.bottom
      bottom: $snackbar-content-height-lrb


  &-content
    padding: 14px 24px
    border-radius: 2px
    pointer-events: auto
    max-width: 568px
    min-width: 288px
    height: $snackbar-content-height
    align-items: center
    display: flex
    font-size: 14px
    justify-content: space-between
    transition: .4s $transition.swing
    position: relative  !important
    elevation(6)

.notify
  &.multi-line &-content
    height: 80px
    padding: 24px

  &.bottom, &.right
    &.multi-line
      bottom: 80px

  &.vertical &-content
    height: 112px
    padding: 24px 24px 14px
    flex-direction: column
    align-items: initial

    .btn
      align-self: flex-end

  &.bottom, &.right
    &.vertical
      bottom: 112px

  .closed
    position :absolute
    right:5px;
    top:5px;

@media $display-breakpoints.xs-only
  .notify
    width: 100%
    left: 0
    right: initial
    transform: none

    &.right, &.left
      &.top
        top: 0

      &.bottom
        bottom: 48px

    &-content
      border-radius: 0
      max-width: 100%
      width: 100%

      .btn
        margin: 0 0 0 24px


