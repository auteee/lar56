*
  &::-webkit-scrollbar                      //滚动条整体部分，其中的属性有width,height,background,border
    width: 8px;
    height: 8px;
    border-radius: 8px;
    background-color :rgba($baseColor.primary,.3)

  &::-webkit-scrollbar-button               //滚动条两端的按钮。
    display :none

  &::-webkit-scrollbar-track                //外层轨道。可以用display:none让其不显示
    display :none

  &::-webkit-scrollbar-thumb               //滚动条里面可以拖动的那部分
    border-radius: 8px;
    background: $baseColor.primary