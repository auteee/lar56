$slider-height              := 1.4rem
$slider-track-height        := 2px
$slider-ticks-height         := .5rem
$slider-handle-size         := .6rem
$slider-label-transform     = translateX(-50%) translateY(-139%) scale(1)

//them
.slider-container
  color:$baseColor.primary
.slider
  color: currentColor
.slider-handle
  background-color :currentColor
  &-label
    background-color :$baseColor.primary
    color: #fff

//them


.slider-container
  display :inline-flex
  align-items:center
  position: relative
  width: 100%
  label
    flex: 0 0 auto;
    width: auto;
    padding-right :.5rem
  &.active
    .slider-handle
      transform: translateY(-50%) scale(1.2);
      &.label
        transform: translateY(-50%) scale(0);
    .slider-ticks
      opacity 1
  > .prepend-icon
    padding-right :.4rem
  > .append-icon
    padding-left :.4rem



.slider
  flex:1 1 auto
  height: $slider-height
  width: 100%
  cursor: pointer
  position: relative
  outline :none
///////////////////////////
.slider-track, .slider-ticks
  opacity .4
  background currentColor

.slider-track
  position absolute
  top 50%
  left 0
  transform translateY(-50%)
  height $slider-track-height
  width 100%
  transition: .3s $transition.swing
  &.fill
    opacity 1
.slider-ticks
  position absolute
  top 50%
  height $slider-ticks-height
  width 2px
  transform translateX(-50%) translateY(-50%)
///////////////
.slider-handle-container
  position: absolute
  top: 50%
  transition: .3s $transition.swing

.slider-handle
  position: absolute
  width: 16px
  height: 16px
  left: -8px
  top: 50%
  border-radius: 50%
  transition: .3s $transition.swing
  transform: translateY(-50%) scale(.8)
  user-select: none

  &-label
    display: flex
    align-items: center
    justify-content: center
    font-size: 12px
    width: 28px
    height: 28px
    border-radius: 50% 50% 0
    position: absolute
    left: -14px
    top: -40px
    transform: rotate(45deg)
    user-select: none
    transition: .3s ease-in-out
    span
      transform: rotate(-45deg)