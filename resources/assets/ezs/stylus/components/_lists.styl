.list
  list-style :none
  transition: height .3s $transition.fast-out-slow-in
  padding : $list-padding-tb 0
  background-color :#fff
  &-header
    display :flex
    align-items: center
    padding :0 .8rem
    height :$list-item-single-height
  &-item
    display :flex
    flex:1 1 auto
    flex-flow: row nowrap
    align-items: center
    position: relative
    padding:0 $list-item-padding-lr
    font-size: $list-title-font-size
    font-weight: $list-title-font-weight
    min-height :$list-item-single-height
    cursor: pointer
    &:hover
      background-color :$background-color.yinhui
    > .icon
      width :2.4rem
      height:2.4rem
  &-avatar
    align-content:center

  &-content
    height :$list-item-single-height
    padding:0 $list-content-padding-lr
    text-align: left
    flex: 1 1 auto
    overflow: hidden
    display: flex
    align-items: flex-start
    justify-content: center
    flex-direction: column
  &-title,&-desc
    white-space: nowrap
    overflow: hidden
    text-overflow: ellipsis
    width: 100%
  &-title
    transition: $primary-transition
    height: $list-title-height
    line-height: $list-title-height
    position: relative
  &-desc
    font-size: $list-desc-font-size

  &-action
    justify-content:flex-end

  &.two-line
    .list-content
      height :$list-item-double-height
  &.three-line
    .list-content
      height :$list-item-triple-height
    .list-desc
      white-space: initial
      -webkit-line-clamp: 2
      -webkit-box-orient: vertical
      display: -webkit-box
  &.multi-line
    .list-item
      height :100%
    .list-content
      height:100%
    .list-desc
      display: -webkit-box
      white-space :normal
.divider-inster
  margin-left :3rem
  width :calc(100% - 3rem);

