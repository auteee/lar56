//   list spacing
$list-padding-tb := .8rem
$list-left-padding := .8rem
$list-right-padding := .8rem
$list-top-padding := .4rem
$list-bottom-padding := .4rem

$list-h-action :=2.4rem

$list-title-font-size := $headings.subheading.size //16px - the mdc scss uses subheading to configure like this
$list-title-font-weight := $headings.subheading.weight //400
$list-desc-font-size := ($list-title-font-size - .1rem) //14px

$list-item-padding-lr :=.4rem
$list-content-padding-lr :=.7rem

$list-item-single-height := 2.8rem    //48px
$list-item-double-height := 3.6rem    //72px
$list-item-triple-height := 4.4rem    //88px
$list-title-height :=1.2rem
