
//   tree spacing

$tree-left-padding := .8rem
$tree-right-padding := .8rem
$tree-top-padding := .4rem
$tree-bottom-padding := .4rem
$tree-padding-lr :=.7rem
$tree-h-action :=2.4rem
$tree-ulul-padding-left:= $tree-padding-lr + $tree-h-action

$tree-title-font-size := $headings.subheading.size //16px - the mdc scss uses subheading to configure like this
$tree-title-font-weight := $headings.subheading.weight //400
$tree-item-single-height := 2rem

//them
nav
  &.tree
    background-color :#fff
  li a
    color: $background-color.danhei
    &.active
      color:$baseColor.primary
/////

nav ul
  width: 100%;
  margin: 0;
  font-size: $tree-title-font-size
  font-weight: $tree-title-font-weight
  list-style: none;
  position: relative;
  transition: all .3s $transition.fast-out-slow-in

  .h-action
    display: flex
    min-width: $tree-h-action
    justify-content: flex-start
    align-items: center
  .content
    text-align: left
    flex: 1 1 auto
    overflow: hidden
    display: flex
    align-items: flex-start
    justify-content: center
    flex-direction: column
  .action
    transform: rotate(180deg)
    transition:all .3s $transition.fast-out-slow-in
  li a
    display: flex
    height: $tree-item-single-height
    align-items: center
    padding: 0 $tree-padding-lr
    text-decoration: none
    position: relative
    user-select: none
    cursor:pointer
    &:hover
      background: $background-color.yinse

  ul li > a
    padding-left: $tree-ulul-padding-left

  ul ul li a
    padding-left: $tree-ulul-padding-left + .5rem

  ul ul ul li a
    padding-left: $tree-ulul-padding-left + 1rem

//them
  .tree
    &-node,&-leaf
      > .h-action
        background-color :#e5e5e5;
    &-node:hover,&-leaf:hover
      background-color :#eee;


.tree
  &-node,&-leaf
    display :flex
    flex:1 1 auto
    flex-direction :row
    align-items:center
    > .h-action
      min-width :2rem
      min-height: 2rem
      justify-content :center
    > .node-action
      min-width :2rem
      justify-content :center
      cursor:pointer
  &-leaf:before
    content: "";
    display: block;
    position: absolute;
    width: 1.5rem;
    left:1rem;
    border: 1px solid #616161;
    z-index: 1;
  &-node-title
    display :flex
    flex:1 1 auto
    padding :0 .2rem
  &-list
    position :relative;
    padding :0;
    & .tree-list
      padding-left :3rem;
      &:before
        content: '';
        display: block;
        position: absolute;
        top: 0;
        bottom: 0;
        left: 1rem;
        z-index: 1;
        border: solid 1px #616161;




