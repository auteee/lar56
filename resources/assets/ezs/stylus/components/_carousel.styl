
.carousel
  height: 500px
  width: 100%
  position: relative
  overflow: hidden
  elevation(2)
  &:hover
    .carousel-left,.carousel-right
      transform:scale(1) translateY(-50%)
  &-timer
    position :absolute
    top:0
    left:0
    height: 4px
    overflow :hidden
    max-width:100%
    border :none
    background-color:#ff0000
    z-index :10
  &-item
    display: flex
    align-items: center
    justify-content: center
    flex: 1 0 100%
    height: 100%
    width: 100%
    background-size: cover
    background-position: center center
    transition: .2s ease-out

  &-left, &-right
    position: absolute
    top: 50%
    z-index: 1
    transition: $primary-transition
    .btn
      color: #FFFFFF
      margin: 0 !important
      height: auto
      width: auto
      i
        font-size: 48px

      &:hover
        background: none
  &-left:not(.is-show),&-right:not(.is-show)
    transform:scale(0) translateY(-50%)
  &-left
    left: 5px

  &-right
    right: 5px

  &-controls
    background: rgba(0, 0, 0, .5)
    align-items: center
    bottom: 0
    display: flex
    justify-content: center
    left: 0
    position: absolute
    height: 50px
    list-style-type: none
    width: 100%
    z-index: 1
    &-item
      color: #FFFFFF
      margin: 0 1rem !important
      i
        opacity: .5
        transition: $primary-transition

      &.active
        i
          opacity: 1
          vertical-align: middle
          font-size: 2rem !important

      &:hover
        background: none

        i
          opacity: .8