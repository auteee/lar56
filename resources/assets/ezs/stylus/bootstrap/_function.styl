
//small,big,large,x-large大小
$global-base-size :=.8rem

$globalSize={
  'small':($global-base-size - .2),
  'medium':($global-base-size + .4),
  'big':($global-base-size + 1),
  'large':($global-base-size + 1.7),
  'x-large':($global-base-size + 2.2),
}

global-size($key,$val)
  .{$key}
    font-size:$val !important

for $key,$val in $globalSize
  global-size($key,$val)

//outline-color
