// MIXINS
elevation($z, important = false)
  box-shadow: elevation-+$z+dp (important ? !important : )

elevationTransition($duration = 280ms, $easing = cubic-bezier(.4, 0, .2, 1))
  transition: box-shadow $duration $easing
  will-change: box-shadow

for z in (0..24)
  .elevation-{z}
    elevation(z, true)

